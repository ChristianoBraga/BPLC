--- An loop implementation of the factorial function
(module Fact
    var y
    init y = 1 
    proc fact(x) {
		while ~ (x == 0)
        do {               
		  y := y * x ;
          x := x - 1
		} ; 
		print(y)
	}
end)

(view)

set show loop stats on .
set show loop timing on .
(exec fact(100))

