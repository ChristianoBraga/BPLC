#!/bin/bash
echo "#!/bin/bash"
echo "MAUDE=$1/maude.darwin64"
echo "IMP_DIR=$2"
echo "if [ \"\$TERM_PROGRAM\" = \"iTerm.app\" ] ;"
echo "then"
echo "  ./imgcat ./img/imp.jpg"
echo "fi"
echo "if [ \"\$1\" = \"\" ] ;"
echo "then"
echo "  \$MAUDE -no-banner \$IMP_DIR/maude/imp.maude"
echo "  exit 0"
echo "fi"
echo "while [ \"\$1\" != \"\" ]; do"
echo "  \$MAUDE -no-banner \$IMP_DIR/maude/imp.maude \"\$1\""
echo "  shift"
echo "done"
